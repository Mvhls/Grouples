
<%= form_for :session, url: session_path do |form| %>
<h1> LOGIN PAGE </h1>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<%= flash[:error] %>
