<%= form_for @user do |form| %>
  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% @user.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :email %>
    <div id="login_form"><%= form.email_field :email %></div>
  </div>
  <div>
    <%= form.label :password %>
    <div id="login_form"><%= form.password_field :password %></div>
  </div><br>
  <div>
    <%= form.submit "Sign up", class: "btn btn-lg btn-default" %>
  </div>
<% end %>
 <%= flash[:error] %>
