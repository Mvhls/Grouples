<h1><%= @cohort.name %></h1>

<p>
	<%= link_to "Add a Student", new_cohort_student_path(@cohort.id)%> | <%=link_to "Create New Group", new_cohort_group_path(@cohort.id)%>
</p>

<% @cohort.students.each do |student| %>
	<%= link_to image_tag("#{student.photo.photo_url}", data: { student_id: student.id }), student_path(student), alt: "#{student.name}"%>
	<%= student.name %><br>
	<%= link_to "Edit", edit_student_path(student.id) %>
	<%= button_to "delete", student, :method => :delete %>
<% end %>

<%= link_to 'Back', cohorts_path %>