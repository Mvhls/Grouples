<% if @student %>
	<h1><%=@student.name%> needs a photo!</h1>
<% else %>
	<h1><%=@cohort.name%> needs a photo!</h1>
<% end %>

<%=  form_for(@photo, url: cohort_photos_path) do |f| %>

	<p>
		<div id="login_form"><%= f.text_field :photo_url, :placeholder => "Photo Url" %></div>
	</p>
	
	<% if @student %>
		<p>
			<%= f.hidden_field :imageable_id, :value => @student.id %>
		</p>

		<p>
			<%= f.hidden_field :imageable_type, :value => "Student" %>
		</p>
	
	<% else %>
		<p>
			<%= f.hidden_field :imageable_id, :value => @cohort.id %>
		</p>

		<p>
			<%= f.hidden_field :imageable_type, :value => "Cohort" %>
		</p>
	<% end %>
	<p>
		<%= f.submit "Add Photo", class: "btn btn-info"%>
	</p>

<% end %>
